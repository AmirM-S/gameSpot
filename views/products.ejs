<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Products</title>
    <link rel="stylesheet" href="/products.css" />
    <style>
      /* Add CSS styles for the toggle icon and menu */
      .toggle-icon {
        display: inline-block;
        width: 30px;
        height: 30px;
        background-color: #000;
        cursor: pointer;
        float: right; /* Move the toggle icon to the right */
      }
      .toggle-line {
        display: block;
        width: 100%;
        height: 2px;
        background-color: #fff;
        margin-bottom: 4px; /* Adjust the spacing between the lines */
      }
      .menu {
        display: none;
        position: absolute;
        top: 50px;
        right: 50px; /* Position the menu to the top right */
        background-color: #1d1c2a;
        padding: 10px;
        border-radius: 10px;
      }
      .menu.open {
        display: block;
      }
    </style>
  </head>
  <body>
    <!-- Add toggle icon -->
    <div class="toggle-icon" onclick="toggleMenu()">
      <span class="toggle-line"></span>
      <span class="toggle-line"></span>
      <span class="toggle-line"></span>
    </div>

    <!-- Add menu -->
    <ul class="menu" id="menu">
      <% if (loggedIn) { %>
      <li><a href="/">Main Page</a></li>
      <li><a href="/panel">panel</a></li>
      <li><a href="/logout">Log Out</a></li>
      <% } else { %>
      <li><a href="/">Main Page</a></li>
      <li><a href="/logIn">Log In</a></li>
      <li><a href="/signUp">Sign Up</a></li>

      <% } %>
    </ul>

    <h1>List of Products</h1>
    <% products.forEach(product => { %>
    <li><a href="/products/<%= product._id %>"><%= product.title %></a></li>
    <% }) %>

    <script>
      function toggleMenu() {
        var menu = document.getElementById("menu");
        menu.classList.toggle("open");
      }

      // Close menu when clicking outside
      document.addEventListener("click", function (event) {
        var menu = document.getElementById("menu");
        var toggleIcon = document.querySelector(".toggle-icon");

        if (
          !menu.contains(event.target) &&
          !toggleIcon.contains(event.target)
        ) {
          menu.classList.remove("open");
        }
      });
    </script>
  </body>
</html>
